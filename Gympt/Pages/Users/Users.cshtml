@page
@model GYMPT.Pages.Users.UsersModel
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p class="lead text-muted">Administra los instructores y administradores del sistema.</p>
</div>

<div class="d-flex justify-content-center my-4">
    <a class="btn btn-primary shadow-sm" asp-page="/Users/UserCreate">
        <i class="fas fa-user-plus"></i> Registrar Nuevo Usuario
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Nombre Completo</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.UserList != null && Model.UserList.Any())
                {
                    @foreach (var user in Model.UserList)
                    {
                        <tr>
                            <td>@user.name @user.first_lastname @user.second_lastname</td>
                            <td>@user.email</td>
                            <td>
                                @if (user.role == "Admin")
                                {
                                    <span class="badge bg-danger">Administrador</span>
                                }
                                else if (user.role == "Instructor")
                                {
                                    <span class="badge bg-success">Instructor</span>
                                }
                                else if (user.role == "SuperAdmin")
                                {
                                    <span class="badge bg-primary">SuperAdmin</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@user.role</span>
                                }
                            </td>

                            <td class="text-center">
                                <div class="btn-group" role="group">

                                    @* ----- ❌ NO MOSTRAR ACCIONES PARA SUPERADMIN ----- *@
                                    @if (user.role == "SuperAdmin")
                                    {
                                        <span class="text-muted fst-italic">Sin acciones</span>
                                    }
                                    else
                                    {
                                        @* ----------- VER DETALLES ----------- *@
                                        <a class="btn btn-sm btn-outline-info" title="Ver Detalles"
                                           asp-page="/Users/UserDetail" asp-route-id="@user.id">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        @* ----------- EDITAR (Admins pueden editar Instructores y Admins) ----------- *@
                                        <a class="btn btn-sm btn-outline-warning" title="Editar"
                                           asp-page="/Users/UserEdit" asp-route-id="@user.id">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>

                                        @* ----------- ELIMINAR (pero nunca SuperAdmin) ----------- *@
                                        <button type="button"
                                                class="btn btn-sm btn-outline-danger"
                                                title="Eliminar"
                                                data-bs-toggle="modal"
                                                data-bs-target="#confirmDeleteModal"
                                                data-userid="@user.id"
                                                data-username="@user.name @user.first_lastname">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">No hay usuarios registrados.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- MODAL DELETE -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                ¿Estás seguro de que deseas eliminar a <strong id="deleteModalBody"></strong>?
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>

                <form asp-page-handler="Delete" method="post">
                    <input type="hidden" name="id" id="deleteUserId" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const deleteModal = document.getElementById("confirmDeleteModal");

            deleteModal.addEventListener("show.bs.modal", function (event) {

                const button = event.relatedTarget;

                const userId = button.getAttribute("data-userid");
                const userName = button.getAttribute("data-username");

                document.getElementById("deleteUserId").value = userId;
                document.getElementById("deleteModalBody").innerText = userName;
            });
        });
    </script>
}
