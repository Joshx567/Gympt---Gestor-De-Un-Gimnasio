@page
@model Gympt.Pages.Users.UserCreateModel
@{
    ViewData["Title"] = "Registrar Nuevo Usuario";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h1 class="h3">@ViewData["Title"]</h1>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <h5 class="mt-4 mb-3">Información Personal y de Cuenta</h5>
            <hr />
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="User.name" class="form-label fw-bold">Nombre</label>
                    <input asp-for="User.name" class="form-control" />
                    <span asp-validation-for="User.name" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="User.first_lastname" class="form-label fw-bold">Primer Apellido</label>
                    <input asp-for="User.first_lastname" class="form-control" />
                    <span asp-validation-for="User.first_lastname" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="User.second_lastname" class="form-label fw-bold">Segundo Apellido</label>
                    <input asp-for="User.second_lastname" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="User.email" class="form-label fw-bold">Correo Electrónico</label>
                    <input asp-for="User.email" class="form-control" />
                    <span asp-validation-for="User.email" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="User.ci" class="form-label fw-bold">Cédula de Identidad</label>
                    <input asp-for="User.ci" class="form-control" />
                    <span asp-validation-for="User.ci" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="User.date_birth" class="form-label fw-bold">Fecha de Nacimiento</label>
                    <input asp-for="User.date_birth" class="form-control" type="date" />
                    <span asp-validation-for="User.date_birth" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="User.role" class="form-label fw-bold">Rol del Usuario</label>
                <select asp-for="User.role" class="form-select" id="roleSelector">
                    <option value="">-- Seleccione un rol --</option>
                    <option value="Admin">Administrador</option>
                    <option value="Instructor">Instructor</option>
                </select>
                <span asp-validation-for="User.role" class="text-danger"></span>
            </div>

            <!-- SECCIÓN DINÁMICA PARA INSTRUCTORES -->
            <div id="instructorFields" style="display: none;">
                <hr />
                <h5 class="mt-4 mb-3 text-success">Información Profesional de Instructor</h5>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="User.specialization" class="form-label fw-bold">Especialización</label>
                        <input asp-for="User.specialization" class="form-control" placeholder="Ej: Yoga, CrossFit, Pesas..." />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="User.hire_date" class="form-label fw-bold">Fecha de Contratación</label>
                        <input asp-for="User.hire_date" class="form-control" type="date" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="User.monthly_salary" class="form-label fw-bold">Salario Mensual (Bs.)</label>
                        <input asp-for="User.monthly_salary" class="form-control" type="number" step="0.01" />
                    </div>
                </div>
            </div>

            <!-- Botones de Acción -->
            <div class="mt-4 text-end">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-plus"></i> Crear Usuario
                </button>
                <a asp-page="/Users/Users" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const roleSelector = document.getElementById('roleSelector');
            const instructorFields = document.getElementById('instructorFields');

            function toggleInstructorFields() {
                const role = roleSelector.value;
                instructorFields.style.display = (role === 'Instructor' || role === 'Admin') ? 'block' : 'none';
            }

            toggleInstructorFields();
            roleSelector.addEventListener('change', toggleInstructorFields);
        });
    </script>
}
